                                </StackLayout>
                                <!--                    -->
                            </StackLayout>
                            <!--ordenFin2-->
                            <!--orden3-->
                            <StackLayout
                                x:Name="ordenes3"
                                IsVisible="False"
                                BackgroundColor="#F35E00"
                                Margin="10,0,10,0"
                                Padding="10,5,10,10" 
                                HorizontalOptions="FillAndExpand"
                                Orientation="Vertical">

                                <Label 
                                            x:Name="orden3"
